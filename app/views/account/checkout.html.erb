<fieldset style="margin-left: 200px; margin-right: 200px;">
<legend align="center">Payment Information</legend>
<br /><br />
<div style="margin-left: 40px;">
<img alt="Credit_card" src="/images/cc.gif" />

<p>
  <label for="card_number">Card Number</label><font color="red">*</font><br />
  <input id="card_number" maxlength="19" size="19" type="text" placeholder="4111111111111111" />

</p>
<p>
  <label for="card_month">Expiration</label><font color="red">*</font><br />
  <select id="card_month">
<option value="1">1</option>
<option value="2">2</option>
<option value="3">3</option>
<option value="4">4</option>
<option value="5">5</option>
<option value="6">6</option>
<option value="7">7</option>
<option value="8">8</option>
<option value="9">9</option>
<option value="10">10</option>
<option value="11">11</option>
<option selected="selected" value="12">12</option>
</select>

  <select id="card_year">
<option selected="selected" value="2013">2013</option>
<option value="2014">2014</option>
<option value="2015">2015</option>
<option value="2016">2016</option>
<option value="2017">2017</option>
<option value="2018">2018</option>
<option value="2019">2019</option>
<option value="2020">2020</option>
<option value="2021">2021</option>
<option value="2022">2022</option>
<option value="2023">2023</option>
<option value="2024">2024</option>
<option value="2025">2025</option>
<option value="2026">2026</option>
<option value="2027">2027</option>
<option value="2028">2028</option>
</select>

</p>
<p>
  <label for="card_code">Card Code</label><font color="red">*</font><br />
  <input id="card_code" size="5" type="text" placeholder="123" />

</p>
</div>

  <div style="position: absolute; top: 100px; right: 50px;">
    <div style="display: table;" border="1">
      <div style="display: table-row;">
        <div style="display: table-cell;"><b>ORDER SUMMARY</b></div>
      </div>
        <div style="display: table-row;">
          <div style="display: table-cell;">ITEM TOTAL: <%= number_to_currency(@cart.total_price) %></div>
        </div>
      <div style="display: table-row;">
          <div style="display: table-cell;">SHIPPING: $5.00</div>
      </div>
      <div style="display: table-row;">
          <div style="display: table-cell;">TAX 8%: <%= number_to_currency(@cart.total_price*0.08) %></div>
      </div>
      <div style="display: table-row;">
          <div style="display: table-cell;"><font color="#009900">ITEM TOTAL: <%= number_to_currency(@cart.total_price*1.08 + 5) %></font></div>
        </div>
      
    </div>
  </div>


<br /><br /><br />
<center>
<%= button_to "Place Order", {:action => "complete_order"}, {:class => "button blue"} %>
</center>
</fieldset>
<br /><br /><br /><br /><br /><br />



