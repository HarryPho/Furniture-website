<h1>Listing products</h1>

<table>
  <tr>
    <th>Product</th>
    <th>Description</th>
    <th>Finish</th>
    <th>Standard price</th>
    <th>Product line</th>
    <th>Photo path</th>
    <th>Cost</th>
    <th>Annual sales goal</th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%=h product.product_id %></td>
    <td><%=h product.description %></td>
    <td><%=h product.finish %></td>
    <td><%=h product.standard_price %></td>
    <td><%=h product.product_line_id %></td>
    <td><%=h product.photo_path %></td>
    <td><%=h product.cost %></td>
    <td><%=h product.annual_sales_goal %></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= link_to 'Destroy', product, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

