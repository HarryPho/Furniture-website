  <div style="width: 250px;  margin-left: 40%; margin-right: 40%;">
    <h2>Sign in</h2>
      <% form_for(:session, :url => sessions_path) do |f| %>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.text_field :email %>
        </div>
        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password %>
        </div>
        <br/>
        <div class="actions">
          <%= f.submit "Sign in" %>
        </div>
      <% end %>
<p>New customer? <%= link_to "Sign up now!", new_user_path %></p>
  </div>
<br/><br/><br/>